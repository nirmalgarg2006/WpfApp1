<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid x:Name="mygrid">
        <Button Content="Button" HorizontalAlignment="Left" Margin="322,250,0,0" VerticalAlignment="Top" Width="167" Height="46" Click="Button_Click"/>
        <TextBox HorizontalAlignment="Left" Height="35" Margin="322,126,0,0" TextWrapping="Wrap" Text="{Binding Path=sName}" VerticalAlignment="Top" Width="184" Name="txtMessage" />

    </Grid>
</Window>
